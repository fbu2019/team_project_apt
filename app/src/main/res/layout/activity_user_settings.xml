<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationFragments.Profile.Settings.UserSettings">

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        android:background="@color/red_5"
        android:backgroundTint="@color/red_5"
        android:foregroundTint="@color/red_5"
        android:text="Delete Account"
        android:textAllCaps="false"
        android:textColor="@color/quantum_white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Delete Account" />

    <ImageView
        android:id="@+id/ivUserProfileImage"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/userFullName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/userFullName"
        app:layout_constraintTop_toBottomOf="@+id/userFullName"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/currentLocationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:text="Current Location: "
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classesTeachingMessage" />

    <TextView
        android:id="@+id/currentPreferencesMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Current Preferences: "
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/currentLocationMessage"
        app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

    <TextView
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location coordinates"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/currentLocationMessage"
        app:layout_constraintTop_toBottomOf="@+id/currentLocationMessage" />

    <TextView
        android:id="@+id/currentPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User prferences"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/currentPreferencesMessage"
        app:layout_constraintTop_toBottomOf="@+id/currentPreferencesMessage" />

    <TextView
        android:id="@+id/usersWhoRatedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rating Information:"
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/currentPreferencesMessage"
        app:layout_constraintTop_toBottomOf="@+id/currentPreferences" />

    <TextView
        android:id="@+id/currentNumberRatings"
        android:layout_width="258dp"
        android:layout_height="92dp"
        android:text="TextView"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="@+id/usersWhoRatedMessage"
        app:layout_constraintTop_toBottomOf="@+id/usersWhoRatedMessage" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sabrina Pin"
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/classesTakingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="64dp"
        android:text="Classes Taking"
        android:textAlignment="center"
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserProfileImage" />

    <TextView
        android:id="@+id/classesTeachingMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:text="Classes Teaching"
        android:textAlignment="center"
        android:textColor="@color/color_palette_dark_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivUserProfileImage" />

    <TextView
        android:id="@+id/currentNumberTeaching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="5"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/classesTeachingMessage"
        app:layout_constraintEnd_toEndOf="@+id/classesTeachingMessage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/classesTeachingMessage" />

    <TextView
        android:id="@+id/currentNumberTaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="16"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/classesTakingMessage"
        app:layout_constraintEnd_toEndOf="@+id/classesTakingMessage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/classesTakingMessage" />

</android.support.constraint.ConstraintLayout>